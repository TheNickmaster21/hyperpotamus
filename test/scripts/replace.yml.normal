steps:
  - actions:
      - merge:
          source:
            value_to_search: this is fun
          override: true
        path: $.steps.0.actions.0
      - replace:
          regex_output:
            value: <% value_to_search %>
            match: !<tag:yaml.org,2002:js/regexp> /is/gi
            replacement: '**'
          string_output:
            value: <% value_to_search %>
            match: is
            replacement: '**'
        path: $.steps.0.actions.1
      - compare:
          array:
            - th** ** fun
            - <% regex_output %>
          operator: =
        path: $.steps.0.actions.2
      - compare:
          array:
            - th** is fun
            - <% string_output %>
          operator: =
        path: $.steps.0.actions.3
    path: $.steps.0
normalized: true
