steps:
  - actions:
      - request:
          url: 'http://localhost:3000/static/test.html'
          headers:
            user-agent: 'Hyperpotamus/1.0.6-markup (+http://github.com/pmarkert/hyperpotamus)'
        response:
          and:
            - text: This is a test
            - jquery: a
              count: 2
              capture:
                href: '@href'
                text: text
                innerHTML: innerHTML
                html: html
                outerHTML: outerHTML
                all_href:
                  - '@href'
                all_text:
                  - text
                all_innerHTML:
                  - innerHTML
                all_html:
                  - html
                all_outerHTML:
                  - outerHTML
            - compare:
                operator: =
                array:
                  - Link 1
                  - '<% text %>'
normalized: true
